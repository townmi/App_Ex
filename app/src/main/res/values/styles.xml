<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="MyThemeBlue"></style>

  <style name="MyThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">

    <!--选中状态icon的颜色和字体颜色-->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorTheme</item>
    <!--<item name="android:actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>-->

  </style>

  <style name="SplashTheme" parent="MyThemeBlue">
    <item name="android:windowBackground">@drawable/launch_default</item>
    <item name="android:windowFullscreen">true</item>
    <item name="windowNoTitle">true</item>
    <!--<item name="android:windowIsTranslucent">false</item>-->
    <!--<item name="android:windowDisablePreview">true</item>-->
  </style>

  <style name="IntroductionTheme" parent="MyThemeBlue">
    <item name="android:windowFullscreen">true</item>
    <item name="windowNoTitle">true</item>
  </style>
</resources>
