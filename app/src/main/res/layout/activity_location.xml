<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.goubaa.harry.nightplus.Views.Location.Location">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:scrollbars="none">

    <com.goubaa.harry.nightplus.CustomViews.CustomListView
      android:id="@+id/location_lists"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"></com.goubaa.harry.nightplus.CustomViews.CustomListView>

  </ScrollView>

  <LinearLayout
    android:id="@+id/location_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y48"
    android:background="#ad000000">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/location_arrow_left"
        android:layout_width="@dimen/x43"
        android:layout_height="@dimen/y36"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingBottom="@dimen/x1"
        android:text="@string/ion_arrow_left"
        android:textAlignment="center"
        android:textColor="@color/colorMoreLightGray"
        android:textSize="@dimen/x18" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:text="@string/location_title"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"></TextView>
    </RelativeLayout>
  </LinearLayout>
</android.support.constraint.ConstraintLayout>
