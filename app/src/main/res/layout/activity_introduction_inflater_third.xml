<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitXY"
      android:src="@drawable/launch_default_3" />

    <Button
      android:id="@+id/introduction_btn"
      style="@style/follow_btn"
      android:layout_width="@dimen/x218"
      android:layout_height="@dimen/y33"
      android:layout_above="@+id/image"
      android:layout_alignParentBottom="true"
      android:layout_centerVertical="true"
      android:layout_marginVertical="@dimen/y78"
      android:background="@drawable/introduction_inflater_button_background"
      android:layout_marginBottom="10dp"
      android:layout_marginRight="10dp"
      android:layout_centerInParent="true"
      android:text="@string/app_introduction_btn"
      android:textAlignment="center"
      android:textColor="@color/colorWhite"
      android:textSize="16sp"
      android:lineSpacingMultiplier="1.43"
      android:stateListAnimator="@null"
      android:visibility="visible" />
  </RelativeLayout>
</LinearLayout>
