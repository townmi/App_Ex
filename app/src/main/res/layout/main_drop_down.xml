<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#00000000">
  <!--
    android:background="@drawable/main_drop_down_background"
    -->
  <LinearLayout
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_width="@dimen/x198"
    android:layout_marginTop="@dimen/y24"
    android:layout_height="wrap_content"
    android:background="@drawable/main_drop_down_background"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/y30">
      <ImageView
        android:layout_width="@dimen/x50"
        android:src="@drawable/main_action_group"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        android:text="@string/app_main_action_group"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/y30">
      <ImageView
        android:layout_width="@dimen/x50"
        android:src="@drawable/main_action_friend"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        android:text="添加朋友"/>
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>
